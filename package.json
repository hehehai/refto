{
  "name": "refto-one",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "db:push": "pnpm --filter @refto-one/db db:push",
    "db:studio": "pnpm --filter @refto-one/db db:studio",
    "db:generate": "pnpm --filter @refto-one/db db:generate",
    "db:migrate": "pnpm --filter @refto-one/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13",
    "@refto-one/common": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^22.19.2",
    "ultracite": "6.4.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.14.0"
}
