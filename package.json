{
  "name": "refto-one",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "dev:web": "pnpm --filter web dev",
    "dev:start": "pnpm --filter web run start",
    "check-types": "pnpm -r check-types",
    "db:push": "pnpm --filter @refto-one/db db:push",
    "db:studio": "pnpm --filter @refto-one/db db:studio",
    "db:generate": "pnpm --filter @refto-one/db db:generate",
    "db:migrate": "pnpm --filter @refto-one/db db:migrate",
    "db:seed": "pnpm --filter @refto-one/db db:seed",
    "deploy": "pnpm --filter web run deploy",
    "deploy:destroy": "pnpm --filter web run destroy"
  },
  "dependencies": {
    "@refto-one/common": "workspace:*",
    "dotenv": "^17.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "ultracite": "6.4.0"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=24"
  }
}
