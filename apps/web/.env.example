# Environment Variables
# Copy to .env and fill in your values

# CORS & Auth URLs
CORS_ORIGIN="http://localhost:3001"
BETTER_AUTH_URL="http://localhost:3001"

# Database - PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/refto"

# Better Auth - generate with: pnpm dlx @better-auth/cli@latest secret
BETTER_AUTH_SECRET=""

# Email (React Email + Resend)
EMAIL_USER="noreply@your-domain.com"
RESEND_API_KEY="re_xxx"

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google OAuth
GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET=""

# Cloudflare R2 Storage
CLOUD_FLARE_R2_ACCOUNT_ID=""
CLOUD_FLARE_S3_UPLOAD_KEY=""
CLOUD_FLARE_S3_UPLOAD_SECRET=""
CLOUD_FLARE_S3_UPLOAD_BUCKET="refto"

# Public R2 storage URL (client-side accessible)
VITE_CLOUD_FLARE_R2_URL="https://storage.your-domain.com"
