{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "24.6.0",
    "pnpm": "10.14.0"
  },
  "steps": {
    "install": {
      "commands": [
        { "src": ".", "dest": "." },
        "pnpm install"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["pnpm run build"]
    }
  },
  "deploy": {
    "inputs": [
      { "step": "build", "include": ["apps/web/.output", "node_modules"] }
    ],
    "startCommand": "node apps/web/.output/server/index.mjs"
  }
}
